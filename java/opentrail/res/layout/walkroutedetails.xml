 <Button android:id="@+id/btnWrOk" android:text="@string/ok" android:layout_width="fill_parent" android:layout_height="wrap_content" 
     android:layout_alignParentBottom="true"/>
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:id="@+id/walkrouteDetailsMain"
    android:layout_above="@+id/btnWrOk">
 

 <TextView android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Filename" />
 <EditText android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:id="@+id/etWrFilename" />
  <TextView android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Walk route title" />
 <EditText android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:id="@+id/etWrTitle" />
  <TextView android:layout_width="wrap_content" 
     android:layout_height="wrap_content" android:id="@+id/txtWalkrouteDistance" />
  <TextView android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Description" />
 <EditText android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:id="@+id/etWrDescription" />
 
</LinearLayout>
</RelativeLayout>